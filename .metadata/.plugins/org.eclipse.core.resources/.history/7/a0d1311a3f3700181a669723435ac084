package hello;

public class TTTGrid {

	private char[][] tab2Dim = new char[3][3];
	// private char[][] tab2Dim = {{" "," "," "},{" "," "," "},{" "," "," "}};

	// initialisation
	public void init() {
		for (int i = 0; i < tab2Dim[0].length; i++) {

			for (int j = 0; j < tab2Dim[0].length; j++) {
				tab2Dim[i][j] = ' ';
			}
		}
	}

	public void put(char c, int i, int j) {

		tab2Dim[i][j] = c;

	}

	public void print() {
		System.out.println("-------------");
		for (int i = 0; i < tab2Dim[0].length; i++) {

			// System.out.print(" |");
			for (int j = 0; j < tab2Dim[0].length; j++) {
				System.out.print("| " + tab2Dim[j][i] + " ");
			}
			System.out.print("| \n");
			System.out.println("-------------");
		}
	}

	public void print2() {
		for (int i = 0; i < tab2Dim[0].length; i++) {

			System.out.print(" |");
			for (int j = 0; j < tab2Dim[0].length; j++) {
				System.out.print(" " + tab2Dim[j][i] + " ");
			}
			System.out.print("| \n");
		}
	}

}
